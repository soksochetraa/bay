<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/learninghubFragment">

    <fragment
        android:id="@+id/learninghubFragment"
        android:name="com.example.bay.fragment.LearninghubFragment"
        android:label="Learning Hub"
        tools:layout="@layout/fragment_learninghub">

        <action
            android:id="@+id/action_learninghubFragment_to_cardDetailFragment"
            app:destination="@id/cardDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/cardDetailFragment"
        android:name="com.example.bay.fragment.CardDetailFragment"
        android:label="Card Detail"
        tools:layout="@layout/fragment_card_detail">

        <argument
            android:name="card_id"
            app:argType="string" />

    </fragment>

</navigation>