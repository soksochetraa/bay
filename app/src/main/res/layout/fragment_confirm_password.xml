<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ConfirmPasswordFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="76dp"
            android:fontFamily="@font/kantumruypro_medium"
            android:lineHeight="34sp"
            android:text="ដើម្បីផ្លាស់ប្តូរប្ដូរឈ្មោះ!!\nសូមបញ្ចូលលេខសម្ងាត់របស់អ្នក"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_edittext1"
            android:fontFamily="@font/kantumruypro_regular"
            android:hint="លេខសម្ងាត់"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingHorizontal="18dp"
            android:textColor="@color/textColors"
            android:textColorHint="@color/gray"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/textView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvForgetPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/kantumruypro_regular"
            android:text="ភ្លេចលេខសម្ងាត់?"
            android:textSize="13sp"
            android:clickable="true"
            android:focusable="true"
            android:textColor="@color/primary"
            android:lineSpacingExtra="4dp"
            app:layout_constraintTop_toBottomOf="@id/etPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="35dp"
            android:fontFamily="@font/kantumruypro_regular"
            android:text="រក្សាទុក"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:backgroundTint="@color/primary"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvForgetPassword" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>