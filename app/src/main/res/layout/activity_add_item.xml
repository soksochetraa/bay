<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".AddShoppingItemActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_chevron_left"
                android:drawableTint="@color/textColors"
                android:fontFamily="@font/kantumruypro_medium"
                android:padding="0dp"
                android:text="ត្រឡប់"
                android:textAlignment="textStart"
                android:textColor="@color/textColors"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/kantumruypro_regular"
                android:text="រូបភាព ទំនិញ / សេវាកម្ម"
                android:textColor="#7C7C7C"
                android:textSize="16sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/imagesContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Image 1 -->
                    <FrameLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/image_border"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="top|end"
                            android:layout_margin="4dp"
                            android:background="@drawable/rounded_close_bg"
                            android:src="@drawable/ic_close"
                            app:tint="@android:color/white" />
                    </FrameLayout>

                    <!-- Image 2 -->
                    <FrameLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/image_border"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="top|end"
                            android:layout_margin="4dp"
                            android:background="@drawable/rounded_close_bg"
                            android:src="@drawable/ic_close"
                            app:tint="@android:color/white" />
                    </FrameLayout>

                    <!-- Image 3 -->
                    <FrameLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/image_border"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="top|end"
                            android:layout_margin="4dp"
                            android:background="@drawable/rounded_close_bg"
                            android:src="@drawable/ic_close"
                            app:tint="@android:color/white" />
                    </FrameLayout>

                    <!-- Image 4 -->
                    <FrameLayout
                        android:layout_width="110dp"
                        android:layout_height="110dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/image_border"
                            android:scaleType="centerCrop"
                            android:src="@drawable/img" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="top|end"
                            android:layout_margin="4dp"
                            android:background="@drawable/rounded_close_bg"
                            android:src="@drawable/ic_close"
                            app:tint="@android:color/white" />
                    </FrameLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/kantumruypro_regular"
                android:text="គំរូប"
                android:layout_marginStart="40dp"
                android:textColor="#7C7C7C"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnAddImages"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="#EFEEEE"
                android:fontFamily="@font/kantumruypro_regular"
                android:text="បញ្ចូលរូបភាព"
                android:textAllCaps="false"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                app:cornerRadius="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/kantumruypro_regular"
                android:text="ឈ្មោះ ទំនិញ / សេវាកម្ម"
                android:textColor="#7C7C7C"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etItemName"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/input_field_background"
                android:fontFamily="@font/kantumruypro_regular"
                android:hint="ស្វាយ"
                android:maxLength="16"
                android:inputType="textAutoCorrect"
                android:maxLines="1"
                android:paddingHorizontal="16dp"
                android:textColorHint="#C0C0C0"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/kantumruypro_regular"
                android:text="ប្រភេទ"
                android:textColor="#7C7C7C"
                android:textSize="16sp" />

            <!-- Improved Category Dropdown -->
            <LinearLayout
                android:id="@+id/categoryContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <!-- Selected Category Display -->
                <RelativeLayout
                    android:id="@+id/btnSelectCategory"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/input_field_background"
                    android:paddingHorizontal="16dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tvSelectedCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/kantumruypro_regular"
                        android:text="ជ្រើសរើសប្រភេទ"
                        android:textColor="#C0C0C0"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/ivDropdownArrow"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_chevron_down"
                        app:tint="#7C7C7C" />

                </RelativeLayout>

                <!-- Dropdown List (Initially Hidden) -->
                <LinearLayout
                    android:id="@+id/dropdownContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:background="@drawable/dropdown_background"
                    android:elevation="8dp"
                    android:layout_marginTop="4dp">
                    <!-- Category items will be added programmatically -->
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/kantumruypro_regular"
                        android:text="តំលៃ"
                        android:textColor="#7C7C7C"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/etPrice"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/input_field_background"
                        android:fontFamily="@font/kantumruypro_regular"
                        android:hint="3000"
                        android:maxLines="1"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="16dp"
                        android:textColorHint="#C0C0C0"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/kantumruypro_regular"
                        android:text="ក្នុងមួយ"
                        android:textColor="#7C7C7C"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/etUnit"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/input_field_background"
                        android:fontFamily="@font/kantumruypro_regular"
                        android:hint="គីឡូក្រាម"
                        android:maxLines="1"
                        android:inputType="textAutoCorrect"
                        android:paddingHorizontal="16dp"
                        android:textColorHint="#C0C0C0"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/kantumruypro_regular"
                android:text="ព័ត៌មានលម្អិតបន្ថែម"
                android:textColor="#7C7C7C"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/input_field_background"
                android:fontFamily="@font/kantumruypro_regular"
                android:gravity="top"
                android:hint="ស្វាយ"
                android:padding="16dp"
                android:textColorHint="#C0C0C0"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:backgroundTint="#008B8B"
                android:fontFamily="@font/kantumruypro_regular"
                android:text="ដាក់ស្នើរ"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:cornerRadius="28dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>