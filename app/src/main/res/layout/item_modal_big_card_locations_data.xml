<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="150dp"
    android:padding="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fixedHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item_location_modal2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingVertical="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kantumruypro_semibold"
                android:text="ព័ត៌មានលម្អិត"
                android:textColor="@color/textColors"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_circle_button"
                android:src="@drawable/ico_close"
                app:layout_constraintBottom_toBottomOf="@+id/textView1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="22dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
            tools:layout_editor_absoluteX="22dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/btnProfile"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:clickable="true"
                android:focusable="false"
                android:scaleType="centerCrop"
                android:src="@drawable/img"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/CircleImageView" />

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/kantumruypro_medium"
                android:text="ព័ត៌មានលម្អិត"
                android:textAlignment="textStart"
                android:textColor="@color/textColors"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnProfile"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/kantumruypro_regular"
                android:text="ព័ត៌មានលម្អិត"
                android:textAlignment="textStart"
                android:textColor="@color/gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnProfile"
                app:layout_constraintTop_toBottomOf="@+id/name" />

            <LinearLayout
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_chip_badge"
                android:backgroundTint="#FEF9C3"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                app:layout_constraintStart_toEndOf="@+id/btnProfile"
                app:layout_constraintTop_toBottomOf="@+id/category">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ico_star" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:includeFontPadding="false"
                    android:text="200 pts"
                    android:textColor="#854D0E"
                    android:textSize="10sp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="22dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout5">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/ViewSellProfile"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/kantumruypro_regular"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="មើលទំនិញរបស់គាត់"
                android:textColor="@color/primary"
                android:textSize="14sp"
                app:backgroundTint="@color/white"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toStartOf="@+id/message"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:rippleColor="?attr/colorOnPrimary"
                app:strokeColor="@color/primary"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/message"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/kantumruypro_regular"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="ផ្ញើសារ"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:backgroundTint="@color/primary"
                app:cornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ViewSellProfile"
                app:layout_constraintTop_toTopOf="parent"
                app:rippleColor="?attr/colorOnPrimary" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="#DDDDDD"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout6" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/verticalScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="22dp"
        android:scrollbars="none"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fixedHeader">

        <LinearLayout
            android:id="@+id/verticalContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/photoSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kantumruypro_medium"
                    android:text="ព័ត៌មានលម្អិត"
                    android:textAlignment="textStart"
                    android:textColor="@color/textColor"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/allPhotos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/kantumruypro_regular"
                    android:text="១ / ៥"
                    android:textAlignment="textEnd"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/textView4" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/photoDisplay"
                    android:layout_width="0dp"
                    android:layout_height="260dp"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView4"
                    app:shapeAppearanceOverlay="@style/LocationActiveImageCorners" />

                <LinearLayout
                    android:id="@+id/photoThumbnails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/photoDisplay">

                    <TextView
                        android:id="@+id/moreImagesIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_more_indicator"
                        android:padding="4dp"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/thumb1"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        android:alpha="1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img"
                        app:shapeAppearanceOverlay="@style/LocationInactiveImageCorners"
                        app:strokeColor="@color/primary"
                        app:strokeWidth="2dp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/thumb2"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        android:alpha="0.5"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img"
                        app:shapeAppearanceOverlay="@style/LocationInactiveImageCorners"
                        app:strokeWidth="0dp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/thumb3"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        android:alpha="0.5"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img"
                        app:shapeAppearanceOverlay="@style/LocationInactiveImageCorners"
                        app:strokeWidth="0dp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/thumb4"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1"
                        android:alpha="0.5"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img"
                        app:shapeAppearanceOverlay="@style/LocationInactiveImageCorners"
                        app:strokeWidth="0dp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/thumb5"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:alpha="0.5"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img"
                        app:shapeAppearanceOverlay="@style/LocationInactiveImageCorners"
                        app:strokeWidth="0dp" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btnPrev"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_circle_button"
                    android:contentDescription="Previous Photo"
                    android:src="@drawable/ico_prev"
                    app:layout_constraintBottom_toBottomOf="@id/photoDisplay"
                    app:layout_constraintStart_toStartOf="@id/photoDisplay"
                    app:layout_constraintTop_toTopOf="@id/photoDisplay" />

                <ImageButton
                    android:id="@+id/btnNext"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/bg_circle_button"
                    android:contentDescription="Next Photo"
                    android:src="@drawable/ico_next"
                    app:layout_constraintBottom_toBottomOf="@id/photoDisplay"
                    app:layout_constraintEnd_toEndOf="@id/photoDisplay"
                    app:layout_constraintTop_toTopOf="@id/photoDisplay" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/kantumruypro_regular"
                android:text="ប៉ះរូបភាពដើម្បីមើលពេញអេក្រង់"
                android:textAlignment="textStart"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_location_modal2_contact"
                android:padding="12dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kantumruypro_medium"
                    android:text="អំពីកសិដ្ឋាន"
                    android:textAlignment="textStart"
                    android:textColor="@color/textColor"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5">

                    <!-- Phone row -->
                    <LinearLayout
                        android:id="@+id/rowPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/btnCall"
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:background="@drawable/bg_circle_button"
                            android:clickable="true"
                            android:contentDescription="Call"
                            android:focusable="true"
                            android:padding="10dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/ico_phone"
                            app:tint="@color/textColor" />

                        <TextView
                            android:id="@+id/tvPhoneValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingTop="2dp"
                            android:text="+855 12 800 800"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Location row -->
                    <LinearLayout
                        android:id="@+id/rowLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/btnLocation"
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:background="@drawable/bg_circle_button"
                            android:padding="10dp"
                            android:src="@drawable/ic_location"
                            app:tint="@color/textColor" />

                        <TextView
                            android:id="@+id/tvLocationValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingTop="2dp"
                            android:text="Phnom Penh, Cambodia"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Facebook row -->
                    <LinearLayout
                        android:id="@+id/rowFacebook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/btnFacebook"
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:background="@drawable/bg_circle_button"
                            android:padding="10dp"
                            android:src="@drawable/ico_facebook" />

                        <TextView
                            android:id="@+id/tvFacebookValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingTop="2dp"
                            android:text="facebook.com/username"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Telegram row -->
                    <LinearLayout
                        android:id="@+id/rowTelegram"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/btnTelegram"
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:background="@drawable/bg_circle_button"
                            android:padding="10dp"
                            android:src="@drawable/ico_telegram" />

                        <TextView
                            android:id="@+id/tvTelegramValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingTop="2dp"
                            android:text="@username"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- TikTok row -->
                    <LinearLayout
                        android:id="@+id/rowTiktok"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/btnTiktok"
                            android:layout_width="46dp"
                            android:layout_height="46dp"
                            android:background="@drawable/bg_circle_button"
                            android:padding="10dp"
                            android:src="@drawable/ico_tiktok" />

                        <TextView
                            android:id="@+id/tvTiktokValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingTop="2dp"
                            android:text="@usernametiktok"
                            android:textColor="@color/gray"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/kantumruypro_medium"
                android:paddingHorizontal="12dp"
                android:text="ដំណាំ"
                android:textAlignment="textStart"
                android:textColor="@color/textColor"
                android:textSize="14sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/badgeFruit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/bg_chip_badge"
                        android:backgroundTint="#FEF9C3"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        app:layout_constraintStart_toEndOf="@+id/btnProfile"
                        app:layout_constraintTop_toBottomOf="@+id/category">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/ico_leaf" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:includeFontPadding="false"
                            android:text="Mango"
                            android:textColor="#854D0E"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/kantumruypro_medium"
                android:paddingHorizontal="12dp"
                android:text="ការទទួលស្គាល់"
                android:textAlignment="textStart"
                android:textColor="@color/textColor"
                android:textSize="14sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/badgeCertificate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/bg_chip_badge"
                        android:backgroundTint="#FEF9C3"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        app:layout_constraintStart_toEndOf="@+id/btnProfile"
                        app:layout_constraintTop_toBottomOf="@+id/category">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/ico_certification" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:includeFontPadding="false"
                            android:text="Mango"
                            android:textColor="#854D0E"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/kantumruypro_medium"
                android:paddingHorizontal="12dp"
                android:text="ព័ត៌មានបន្ថែម"
                android:textAlignment="textStart"
                android:textColor="@color/textColor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView9"
