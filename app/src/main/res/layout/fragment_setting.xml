<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.SettingFragment">

   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <Button
           android:id="@+id/btnBack"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="16dp"
           android:layout_marginTop="26dp"
           android:background="@android:color/transparent"
           android:drawableLeft="@drawable/ic_chevron_left"
           android:drawableTint="@color/textColors"
           android:fontFamily="@font/kantumruypro_medium"
           android:padding="0dp"
           android:textAlignment="textStart"
           android:textColor="@color/textColors"
           android:textSize="22sp"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:padding="10dp"
           android:layout_marginHorizontal="26dp"
           android:orientation="vertical"
           android:gravity="center"
           android:background="@drawable/bg_section_setting"
           app:layout_constraintTop_toBottomOf="@id/btnBack"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent">




       </LinearLayout>

   </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>