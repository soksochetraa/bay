<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.SettingFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Back / Title -->
            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="45dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_chevron_left"
                android:drawablePadding="8dp"
                android:drawableTint="@color/textColors"
                android:fontFamily="@font/kantumruypro_bold"
                android:gravity="center_vertical"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:padding="0dp"
                android:text="គណនី"
                android:textColor="@color/textColors"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- App Settings -->
            <LinearLayout
                android:id="@+id/appSection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                android:padding="16dp"
                android:orientation="vertical"
                android:background="@drawable/bg_section_setting"
                app:layout_constraintTop_toBottomOf="@id/btnBack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ការកំណត់កម្មវិធី"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColors"
                    android:fontFamily="@font/kantumruypro_bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/btnLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_languages"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="ភាសា"
                        android:textSize="16sp"
                        android:textColor="@color/textColors"
                        android:fontFamily="@font/kantumruypro_regular" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvLanguage"
                        android:text="ភាសាខ្មែរ"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/kantumruypro_regular" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/gray" />
                </LinearLayout>
            </LinearLayout>

            <!-- Support -->
            <LinearLayout
                android:id="@+id/supportSection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:padding="16dp"
                android:orientation="vertical"
                android:background="@drawable/bg_section_setting"
                app:layout_constraintTop_toBottomOf="@id/appSection"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ជំនួយ"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColors"
                    android:fontFamily="@font/kantumruypro_bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/buttonContactUs"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_contact"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="ទំនាក់ទំនង"
                        android:textSize="16sp"
                        android:textColor="@color/textColors"
                        android:fontFamily="@font/kantumruypro_regular" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/gray" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/buttonAboutApp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:clickable="true"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_heart"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="អំពីកម្មវិធី"
                        android:textSize="16sp"
                        android:textColor="@color/textColors"
                        android:fontFamily="@font/kantumruypro_regular" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="@color/gray" />
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/kantumruypro_regular"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="ចាកចេញ"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:backgroundTint="@color/primary"
                app:cornerRadius="52dp"
                app:layout_constraintTop_toBottomOf="@id/supportSection"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:rippleColor="?attr/colorOnPrimary" />

            <!-- Version -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvVersion"
                android:text="កំណែ 1.0.0"
                android:textSize="14sp"
                android:layout_marginTop="30dp"
                android:textColor="@color/gray"
                android:fontFamily="@font/kantumruypro_regular"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@id/btnLogout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>
