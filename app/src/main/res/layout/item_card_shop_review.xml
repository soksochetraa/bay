<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    android:backgroundTint="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <!-- Reviewer Avatar -->
        <ImageView
            android:id="@+id/ivReviewerAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/CircleImageView" />

        <TextView
            android:id="@+id/tvReviewerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ម៉ាក់ ដាវីដ"
            android:textSize="16sp"
            android:fontFamily="@font/kantumruypro_regular"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/ivReviewerAvatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ivReviewerAvatar" />

        <!-- Review Status -->
        <TextView
            android:id="@+id/tvReviewStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="បានបញ្ចេញមតិ"
            android:textSize="11sp"
            android:fontFamily="@font/kantumruypro_regular"
            android:textColor="#7C7C7C"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toEndOf="@id/ivReviewerAvatar"
            app:layout_constraintTop_toBottomOf="@id/tvReviewerName" />

        <!-- Star Rating -->
        <LinearLayout
            android:id="@+id/layoutStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivReviewerAvatar">

            <ImageView
                android:id="@+id/ivStar1"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_star_filled" />

            <ImageView
                android:id="@+id/ivStar2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_star_filled" />

            <ImageView
                android:id="@+id/ivStar3"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_star_filled" />

            <ImageView
                android:id="@+id/ivStar4"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_star_filled" />

            <ImageView
                android:id="@+id/ivStar5"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:contentDescription="@string/todo"
                android:src="@drawable/ic_star_unfilled" />
        </LinearLayout>

        <!-- Review Text -->
        <TextView
            android:id="@+id/tvReviewText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="អំបូងស្នែងផ្លែធំវែងស្ដែងដូចស្នែងគោស្ទងបីបួនស្និតឥតបាច់បូរមួយស្និតជ្រងោ បួនប្រាំផ្លែ។ បុន្តែមិនសូវពេញចិត្តខ្លាំងពេក។ ប្រហែលថ្លៃហួសបន្តិច។"
            android:textSize="15sp"
            android:textColor="#7C7C7C"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/kantumruypro_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutStars" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>