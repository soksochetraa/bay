<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/headerBg"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="-130dp"
        android:background="@drawable/bg_home_screen_header"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_setting_button"
        android:src="@drawable/ico_prev"
        android:contentDescription="Back"
        app:tint="@color/textColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileImage"
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:layout_marginTop="95dp"
        android:src="@drawable/img"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:focusable="true"
        app:shapeAppearanceOverlay="@style/CircleImage2"
        app:strokeColor="@android:color/white"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvChangePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="ប្ដូររូបភាព"
        android:textSize="13sp"
        android:textColor="@color/primary"
        android:fontFamily="@font/kantumruypro_regular"
        app:layout_constraintTop_toBottomOf="@id/profileImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/tvChangePhoto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/inputEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:text="នាម"
                android:textSize="14sp"
                android:textColor="@color/textColor"
                android:fontFamily="@font/kantumruypro_medium" />

            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="6dp"
                android:paddingHorizontal="18dp"
                android:background="@drawable/bg_edittext1"
                android:maxLines="1"
                android:textColor="@color/textColors"
                android:fontFamily="@font/kantumruypro_regular"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="35dp"
                android:text="គោត្តនាម"
                android:textSize="14sp"
                android:textColor="@color/textColor"
                android:fontFamily="@font/kantumruypro_medium" />

            <EditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="6dp"
                android:paddingHorizontal="18dp"
                android:background="@drawable/bg_edittext1"
                android:maxLines="1"
                android:textColor="@color/textColors"
                android:fontFamily="@font/kantumruypro_regular"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="35dp"
                android:text="លេខទូរស័ព្ទ"
                android:textSize="14sp"
                android:textColor="@color/textColor"
                android:fontFamily="@font/kantumruypro_medium" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/tvPhoneDisplay"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="18dp"
                    android:background="@drawable/bg_edittext1"
                    android:textColor="@color/textColors"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="35dp"
                android:text="អ៊ីមែល"
                android:textSize="14sp"
                android:textColor="@color/textColor"
                android:fontFamily="@font/kantumruypro_medium" />

            <TextView
                android:id="@+id/tvEmailDisplay"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="18dp"
                android:background="@drawable/bg_edittext1"
                android:textColor="@color/textColors" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="35dp"
                android:text="ទីតាំង"
                android:textSize="14sp"
                android:textColor="@color/textColor"
                android:fontFamily="@font/kantumruypro_medium" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="18dp"
                android:background="@drawable/bg_edittext1"
                android:textColor="@color/textColors" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="35dp"
                android:text="អំពីខ្លួនអ្នក"
                android:textSize="14sp"
                android:textColor="@color/textColor"
                android:fontFamily="@font/kantumruypro_medium" />

            <EditText
                android:id="@+id/etBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="6dp"
                android:paddingHorizontal="18dp"
                android:paddingVertical="12dp"
                android:background="@drawable/bg_edittext1"
                android:minLines="3"
                android:maxLines="5"
                android:maxLength="100"
                android:gravity="top"
                android:textColor="@color/textColors"
                android:fontFamily="@font/kantumruypro_regular"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvBioCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="4dp"
                android:text="0 / 100"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/kantumruypro_regular" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginHorizontal="28dp"
                android:layout_marginTop="18dp"
                android:text="រក្សាទុក"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:backgroundTint="@color/primary"
                app:cornerRadius="14dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
