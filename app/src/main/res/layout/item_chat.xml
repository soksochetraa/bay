<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Profile Image with Online Indicator -->
    <FrameLayout
        android:id="@+id/profileContainer"
        android:layout_width="58dp"
        android:layout_height="58dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img"
            app:shapeAppearanceOverlay="@style/CircleImageView"/>

        <!-- Online Indicator -->
        <View
            android:id="@+id/onlineIndicator"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/item_user_online"
            android:visibility="gone" />

    </FrameLayout>

    <!-- User Info Container -->
    <LinearLayout
        android:id="@+id/infoContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/profileContainer"
        app:layout_constraintEnd_toStartOf="@+id/timeContainer"
        app:layout_constraintStart_toEndOf="@id/profileContainer"
        app:layout_constraintTop_toTopOf="@id/profileContainer">

        <!-- User Name -->
        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="John Doe"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <!-- Last Message -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Delivery/Read Status Indicator in Message Area -->
            <ImageView
                android:id="@+id/imgMessageStatus"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="4dp"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Last Message Text -->
            <TextView
                android:id="@+id/tvLastMessage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Last message preview..."
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <!-- Attachment Icon -->
            <ImageView
                android:id="@+id/imgAttachment"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/icomessage_attachment"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <!-- Time & Status Container -->
    <LinearLayout
        android:id="@+id/timeContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/profileContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/infoContainer"
        app:layout_constraintVertical_bias="0.0">

        <!-- Time -->
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:30 AM"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <!-- Unread Count Badge -->
        <TextView
            android:id="@+id/tvUnreadCount"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="top|end"
            android:background="@drawable/item_user_online"
            android:gravity="center"
            android:text="3"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:fontFamily="sans-serif-medium"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Typing Indicator -->
    <TextView
        android:id="@+id/tvTyping"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="typing..."
        android:textColor="@color/primary"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/timeContainer"
        app:layout_constraintStart_toEndOf="@id/profileContainer"
        app:layout_constraintTop_toBottomOf="@id/infoContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>