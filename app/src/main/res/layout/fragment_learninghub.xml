<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".fragment.LearninghubFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="56dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_chevron_left"
            android:drawableTint="@color/textColors"
            android:fontFamily="@font/kantumruypro_medium"
            android:padding="0dp"
            android:text="ត្រឡប់"
            android:textAlignment="textStart"
            android:textColor="@color/textColors"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Tab Bar -->
        <LinearLayout
            android:id="@+id/tab_bar_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:baselineAligned="false"
            android:elevation="4dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button">

            <!-- Knowledge Tab -->
            <LinearLayout
                android:id="@+id/tab_knowledge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_knowledge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/kantumruypro_bold"
                    android:text="ចំណេះដឹង"
                    android:textColor="#0E4123"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/ic_book" />

                <View
                    android:id="@+id/indicator_knowledge"
                    android:layout_width="127dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="8dp"
                    android:background="#0E4123"
                    android:visibility="visible" />

            </LinearLayout>

            <!-- Save Tab -->
            <LinearLayout
                android:id="@+id/tab_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/kantumruypro_bold"
                    android:text="រក្សាទុក"
                    android:textColor="#6B7280"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/ic_heart" />

                <View
                    android:id="@+id/indicator_save"
                    android:layout_width="127dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="8dp"
                    android:background="#0E4123"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <!-- Search Layout -->
        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:autofillHints=""
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/search_background"
            android:drawableStart="@drawable/ic_search"
            android:hint="ស្វែងរក..."
            android:inputType="text"
            android:maxLines="1"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:textColor="#1F2937"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tab_bar_layout" />

        <!-- Filter Dropdown Section -->
        <LinearLayout
            android:id="@+id/filter_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/et_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Label -->
            <TextView
                android:id="@+id/tv_filter_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="បង្ហាញ ៖"
                android:textSize="14sp"
                android:textColor="@color/textColor"
                android:fontFamily="@font/kantumruypro_regular" />

            <!-- Spinner container -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="12dp"
                android:gravity="center_vertical">

                <!-- Spinner -->
                <Spinner
                    android:id="@+id/spinner_filter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    android:entries="@array/filter_options"
                    android:background="@android:color/transparent"
                    android:popupBackground="@drawable/spinner_dropdown_bg" />

                <!-- Arrow Icon -->
                <ImageView
                    android:id="@+id/ic_arrow_down"
                    android:layout_width="24dp"
                    android:padding="3dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|center_vertical"
                    android:contentDescription="Toggle dropdown"
                    android:src="@drawable/ic_arrow_down"
                    android:clickable="true"
                    android:background="@drawable/bg_spinner_box"
                    android:focusable="true" />
            </FrameLayout>
        </LinearLayout>

        <!-- Content Area for Knowledge Tab -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCards"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filter_layout" />

        <!-- Empty State View -->
        <LinearLayout
            android:id="@+id/empty_state_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filter_layout">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/bg_image_placeholder"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/empty_state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="មិនមានទិន្នន័យត្រូវបានរកឃើញ"
                android:textColor="#6B7280"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/kantumruypro_regular" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>