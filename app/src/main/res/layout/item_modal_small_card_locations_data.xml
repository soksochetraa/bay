<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/bg_item_location_modal1"
    android:layout_marginBottom="20dp"
    tools:ignore="MissingConstraints">

    <TextView
        android:id="@+id/tvLocationName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kantumruypro_regular"
        android:maxLines="1"
        android:text="កសិដ្ឋាន ពូសំ"
        android:textColor="@color/textColors"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/btnClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:background="@drawable/bg_circle_button"
        android:src="@drawable/ico_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvLocationName"
        app:layout_constraintBottom_toBottomOf="@+id/tvLocationName" />

    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/kantumruypro_regular"
        android:drawableStart="@drawable/ico_location"
        android:drawablePadding="10dp"
        android:maxLines="1"
        android:text="កសិដ្ឋាន"
        android:textColor="@color/textColors"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLocationName" />

    <TextView
        android:id="@+id/tvPhoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/kantumruypro_regular"
        android:text="លេខទូរស័ព្ទ:"
        android:textColor="@color/textColors"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCategory" />

    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:fontFamily="@font/kantumruypro_regular"
        android:text="+855966482541"
        android:textColor="@color/textColors"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/tvCopy"
        app:layout_constraintStart_toEndOf="@id/tvPhoneLabel"
        app:layout_constraintTop_toTopOf="@id/tvPhoneLabel" />

    <TextView
        android:id="@+id/tvCopy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/kantumruypro_regular"
        android:text="ចម្លង"
        android:textColor="#007AFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvPhoneLabel" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDetails"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_edittext1"
        android:text="ព័ត៌មានលម្អិត"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:fontFamily="@font/kantumruypro_regular"
        app:backgroundTint="@color/primary"
        app:cornerRadius="52dp"
        app:layout_constraintTop_toBottomOf="@id/tvPhoneLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
