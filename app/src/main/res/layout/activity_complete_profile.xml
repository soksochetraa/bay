<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompleteProfileActivity">

    <RelativeLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#80000000"
        android:elevation="20dp"
        android:visibility="gone"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/circular_view"
            android:elevation="5dp"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/circular_shape"
            android:layout_centerInParent="true" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieView"
            android:elevation="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading" />

        <TextView
            android:id="@+id/loadingText"
            android:elevation="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lottieView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:fontFamily="@font/kantumruypro_medium"
            android:text="កំពុងផ្ទុក..."
            android:textColor="@color/primary"
            android:textSize="18sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="115dp"
        android:fontFamily="@font/kantumruypro_medium"
        android:lineHeight="34sp"
        android:text="បំពេញ ព័ត៌មានផ្ទាល់ខ្លន\nដើម្បីបន្ត!"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="177dp"
        android:layout_height="177dp"
        android:layout_marginTop="51dp"
        android:background="@drawable/bg_circle_button"
        app:shapeAppearanceOverlay="@style/CircleImageView"
        android:src="@drawable/ic_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/etPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="340dp"
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/bg_edittext1"
        android:fontFamily="@font/kantumruypro_regular"
        android:hint="លេខទូរស័ព្ទ"
        android:inputType="phone"
        android:maxLength="16"
        android:maxLines="1"
        android:paddingHorizontal="18dp"
        android:textColor="@color/textColors"
        android:textColorHint="@color/gray"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imagePreview"
        android:layout_width="177dp"
        android:layout_height="177dp"
        android:layout_marginTop="51dp"
        android:src="@drawable/img"
        android:scaleType="centerCrop"
        android:padding="7dp"
        app:strokeWidth="7dp"
        android:visibility="gone"
        app:strokeColor="@color/primary"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearanceOverlay="@style/CircleImageView"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/bg_edittext1"
        android:fontFamily="@font/kantumruypro_regular"
        android:hint="អុីមែល"
        android:inputType="textEmailAddress"
        android:visibility="gone"
        android:maxLines="1"
        android:paddingHorizontal="18dp"
        android:textColor="@color/textColors"
        android:textColorHint="@color/gray"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/tvValidate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="405dp"
        android:background="@drawable/bg_validate"
        android:drawablePadding="12dp"
        android:elevation="10dp"
        android:fontFamily="@font/kantumruypro_regular"
        android:gravity="center_vertical"
        android:lineHeight="34sp"
        android:paddingHorizontal="12dp"
        android:text="បញ្ចូលព័ត៌មានមិនត្រឹមត្រូវ!"
        android:textColor="#DC2626"
        android:textSize="15sp"
        android:visibility="gone"
        app:drawableStartCompat="@drawable/ico_validate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="265dp"
        android:layout_marginHorizontal="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3">

        <EditText
            android:id="@+id/etFirstName"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:autofillHints="name"
            android:background="@drawable/bg_edittext1"
            android:fontFamily="@font/kantumruypro_regular"
            android:hint="នាម ត្រកូល"
            android:inputType="textPersonName"
            android:maxLength="16"
            android:maxLines="1"
            android:paddingHorizontal="18dp"
            android:textColor="@color/textColors"
            android:textColorHint="@color/gray"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etLastName"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:autofillHints="name"
            android:background="@drawable/bg_edittext1"
            android:fontFamily="@font/kantumruypro_regular"
            android:hint="ឈ្មោះ"
            android:inputType="textPersonName"
            android:maxLength="16"
            android:maxLines="1"
            android:paddingHorizontal="18dp"
            android:textColor="@color/textColors"
            android:textColorHint="@color/gray"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/etFirstName"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:layout_marginHorizontal="35dp"
        android:fontFamily="@font/kantumruypro_medium"
        android:lineHeight="34sp"
        android:text="ប្រាប់ពួកយើងអំពីអ្នក"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Spinner
        android:id="@+id/spinnerCategory"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/bg_edittext1"
        android:entries="@array/category_items"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:popupBackground="@color/white"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton2"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="26dp"
        android:layout_marginHorizontal="28dp"
        android:fontFamily="@font/kantumruypro_regular"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="រួចរាល់"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:backgroundTint="@color/primary"
        app:cornerRadius="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCategory"
        app:rippleColor="?attr/colorOnPrimary" />


</androidx.constraintlayout.widget.ConstraintLayout>