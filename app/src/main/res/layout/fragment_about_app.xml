<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AboutAppFragment">

    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollViewCategories">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_heart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/kantumruypro_medium"
            android:text="App យើងបង្កើតឡើងដើម្បីកសិករកម្ពុជា!!"
            android:textColor="@color/primary"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/kantumruypro_regular"
            android:text="App យើងតូចតែបេះដូងយើងធំ!!"
            android:textColor="@color/textColor"
            android:textSize="14sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginHorizontal="28dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/kantumruypro_regular"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="ត្រឡប់ក្រោយ"
            android:drawableLeft="@drawable/ico_prev"
            android:drawableTint="@color/white"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:backgroundTint="@color/primary"
            app:cornerRadius="52dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/input"
            app:rippleColor="?attr/colorOnPrimary" />

    </LinearLayout>

</FrameLayout>