<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddPhoneNumberFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="46dp"
            android:padding="0dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_chevron_left"
            android:drawableTint="@color/textColors"
            android:fontFamily="@font/kantumruypro_medium"
            android:text="ត្រឡប់"
            android:textColor="@color/textColors"
            android:textSize="16sp"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="35dp"
            android:fontFamily="@font/kantumruypro_medium"
            android:lineHeight="34sp"
            android:text="បញ្ចូលលេខទូរស័ព្ទរបស់អ្នក \nដើម្បីភ្ជាប់!!"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <EditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/bg_edittext1"
                android:fontFamily="@font/kantumruypro_regular"
                android:hint="លេខទូរស័ព្ទ"
                android:inputType="phone"
                android:maxLength="16"
                android:maxLines="1"
                android:paddingHorizontal="18dp"
                android:textColor="@color/textColors"
                android:textColorHint="@color/gray"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tvValidate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_validate"
                android:drawablePadding="12dp"
                android:elevation="10dp"
                android:fontFamily="@font/kantumruypro_regular"
                android:gravity="center_vertical"
                android:lineHeight="34sp"
                android:paddingHorizontal="12dp"
                android:text="លេខសម្ងាត់មិនត្រឹមត្រូវ!"
                android:textColor="#DC2626"
                android:textSize="15sp"
                android:visibility="gone"
                app:drawableStartCompat="@drawable/ico_validate" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextButton"
            android:layout_width="match_parent"
            android:layout_marginTop="28dp"
            android:layout_height="58dp"
            android:layout_marginHorizontal="28dp"
            android:fontFamily="@font/kantumruypro_regular"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="ផ្ញើរលេខផ្ទៀងផ្ទាត់"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:backgroundTint="@color/primary"
            app:cornerRadius="52dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:rippleColor="?attr/colorOnPrimary" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>