<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_item_location_modal2">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerCreateFarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="22dp"
        android:paddingTop="18dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kantumruypro_semibold"
            android:text="បង្កើតកំណត់ត្រាកសិដ្ឋានថ្មី"
            android:textColor="@color/textColors"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/kantumruypro_regular"
            android:text="បំពេញព័ត៌មានសំខាន់ៗអំពីកសិដ្ឋាន រួមទាំងរូបភាពយ៉ាងហោចណាស់ ៥ រូប។"
            android:textColor="@color/gray"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnCloseCreate" />

        <ImageButton
            android:id="@+id/btnCloseCreate"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:background="@drawable/bg_circle_button"
            android:src="@drawable/ico_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvTitle"
            app:layout_constraintBottom_toBottomOf="@id/tvTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollCreateFarm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="22dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/headerCreateFarm"
        app:layout_constraintBottom_toTopOf="@id/bottomActions">

        <LinearLayout
            android:id="@+id/containerCreateFarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="22dp">

            <!-- Farm name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/kantumruypro_medium"
                android:text="ឈ្មោះកសិដ្ឋាន*"
                android:textColor="@color/textColor"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etFarmName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bg_community_search"
                android:paddingHorizontal="12dp"
                android:fontFamily="@font/kantumruypro_regular"
                android:hint="ឧទាហរណ៍: កសិដ្ឋានសុខសាន្ត"
                android:textColor="@color/textColor"
                android:textSize="14sp" />

            <!-- Category -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/kantumruypro_medium"
                android:text="ប្រភេទ*"
                android:textColor="@color/textColor"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bg_community_search"
                android:paddingHorizontal="12dp"
                android:spinnerMode="dropdown"
                android:entries="@array/farm_category_options" />

            <!-- Contact section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/kantumruypro_medium"
                android:text="ព័ត៌មានទំនាក់ទំនង"
                android:textColor="@color/textColor"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_location_modal2_contact"
                android:padding="12dp"
                android:layout_marginTop="6dp">

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/bg_community_search"
                    android:paddingHorizontal="12dp"
                    android:fontFamily="@font/kantumruypro_regular"
                    android:hint="លេខទូរស័ព្ទ"
                    android:inputType="phone"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etLocationLink"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_community_search"
                    android:paddingHorizontal="12dp"
                    android:fontFamily="@font/kantumruypro_regular"
                    android:hint="តំណទីតាំង (Google Maps)"
                    android:inputType="textUri"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etFacebook"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_community_search"
                    android:paddingHorizontal="12dp"
                    android:fontFamily="@font/kantumruypro_regular"
                    android:hint="Facebook"
                    android:inputType="textUri"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etTelegram"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_community_search"
                    android:paddingHorizontal="12dp"
                    android:fontFamily="@font/kantumruypro_regular"
                    android:hint="Telegram (@username)"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etTiktok"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_community_search"
                    android:paddingHorizontal="12dp"
                    android:fontFamily="@font/kantumruypro_regular"
                    android:hint="TikTok (@username)"
                    android:textColor="@color/textColor"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Image section (min 5) -->
            <TextView
                android:id="@+id/tvImageSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/kantumruypro_medium"
                android:text="រូបភាពកសិដ្ឋាន*"
                android:textColor="@color/textColor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvImageHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/kantumruypro_regular"
                android:text="សូមបន្ថែមយ៉ាងហោចណាស់ ៥ រូប (អតិបរមា ៥)"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/imageRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgSlot1"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_add_photo"
                    app:shapeAppearanceOverlay="@style/LocationInactiveImageCorners" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgSlot2"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_add_photo"
                    app:shapeAppearanceOverlay="@style/LocationInactiveImageCorners" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgSlot3"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_add_photo"
                    app:shapeAppearanceOverlay="@style/LocationInactiveImageCorners" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgSlot4"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_add_photo"
                    app:shapeAppearanceOverlay="@style/LocationInactiveImageCorners" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgSlot5"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_add_photo"
                    app:shapeAppearanceOverlay="@style/LocationInactiveImageCorners" />
            </LinearLayout>

            <!-- Growing + Certificates (optional simple text for now) -->
            <TextView
                android:id="@+id/tvGrowingLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/kantumruypro_medium"
                android:text="ដំណាំ (បំបែកដោយ , )"
                android:textColor="@color/textColor"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etGrowing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="45dp"
                android:background="@drawable/bg_community_search"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:fontFamily="@font/kantumruypro_regular"
                android:hint="ឧទាហរណ៍: ម្រេច, សណ្តែក, ម្ទេស"
                android:textColor="@color/textColor"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvCertLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/kantumruypro_medium"
                android:text="ការទទួលស្គាល់ (បំបែកដោយ , )"
                android:textColor="@color/textColor"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etCertificates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="45dp"
                android:background="@drawable/bg_community_search"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:fontFamily="@font/kantumruypro_regular"
                android:hint="ឧទាហរណ៍: Organic, GAP, គ្មានសារធាតុគីមី"
                android:textColor="@color/textColor"
                android:textSize="14sp" />

            <!-- About -->
            <TextView
                android:id="@+id/tvAboutLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/kantumruypro_medium"
                android:text="ព័ត៌មានបន្ថែម"
                android:textColor="@color/textColor"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/etAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:background="@drawable/bg_community_search"
                android:gravity="top|start"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:fontFamily="@font/kantumruypro_regular"
                android:hint="ពិពណ៌នាអំពីកសិដ្ឋាន របៀបផលិត បេសកកម្ម..."
                android:inputType="textMultiLine"
                android:textColor="@color/textColor"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom action bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="22dp"
        android:paddingVertical="10dp"
        android:background="@drawable/bg_item_location_modal2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveFarm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:fontFamily="@font/kantumruypro_semibold"
            android:text="រក្សាទុកកំណត់ត្រា"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:backgroundTint="@color/primary"
            app:cornerRadius="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
