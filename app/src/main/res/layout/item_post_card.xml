<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_item_card_knowledge_home"
    android:paddingVertical="8dp">

    <!-- Profile and user info -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/btnProfile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:clickable="true"
        android:focusable="false"
        android:src="@drawable/img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/CircleImageView" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/kantumruypro_regular"
        android:textStyle="bold"
        android:text="សុខ សុចិត្រា"
        android:textColor="@color/textColors"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/btnProfile"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/kantumruypro_regular"
        android:paddingTop="2dp"
        android:text="·"
        android:textColor="@color/gray"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvUsername"
        app:layout_constraintStart_toEndOf="@+id/tvUsername"
        app:layout_constraintTop_toTopOf="@+id/tvUsername" />

    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/kantumruypro_regular"
        android:text="អម្បាញ់មិញ"
        android:textColor="@color/gray"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvUsername"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toTopOf="@+id/tvUsername" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/kantumruypro_regular"
        android:maxLines="3"
        android:text="្កាហសក"
        android:textColor="@color/textColors"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvUsername"
        app:layout_constraintTop_toBottomOf="@+id/tvUsername" />

    <!-- Fixed Height Photo Grid Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/photoGridContainer"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvUsername"
        app:layout_constraintTop_toBottomOf="@id/tvContent">

        <!-- Single Image -->
        <ImageView
            android:id="@+id/singleImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_image_placeholder"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Two Images -->
        <LinearLayout
            android:id="@+id/twoImagesLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/twoImage1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_image_placeholder"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/twoImage2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_image_placeholder"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <!-- Three Images -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/threeImagesLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/threeImage1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/bg_image_placeholder"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/threeImagesRightContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/threeImagesRightContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/threeImage1"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/threeImage2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_image_placeholder"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/threeImage3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_image_placeholder"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Four Images Grid with Overlay on last image -->
        <GridLayout
            android:id="@+id/fourImagesLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:columnCount="2"
            android:rowCount="2"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Image 1 -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp">

                <ImageView
                    android:id="@+id/fourImage1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_image_placeholder"
                    android:scaleType="centerCrop" />
            </FrameLayout>

            <!-- Image 2 -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="2dp">

                <ImageView
                    android:id="@+id/fourImage2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_image_placeholder"
                    android:scaleType="centerCrop" />
            </FrameLayout>

            <!-- Image 3 -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp">

                <ImageView
                    android:id="@+id/fourImage3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/img"
                    android:scaleType="centerCrop" />
            </FrameLayout>

            <!-- Image 4 with Overlay -->
            <FrameLayout
                android:id="@+id/fourImage4Container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp">

                <ImageView
                    android:id="@+id/fourImage4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_image_placeholder"
                    android:scaleType="centerCrop" />

                <!-- Overlay for more images -->
                <View
                    android:id="@+id/imageOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80000000"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvMoreImages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="+1"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </FrameLayout>
        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Action buttons -->
    <LinearLayout
        android:id="@+id/actionsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/photoGridContainer">

        <!-- LIKE -->
        <LinearLayout
            android:id="@+id/layoutLikeCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/ivLikeCard"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_like"
                app:tint="@color/textColors"/>

            <TextView
                android:id="@+id/text_like_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="0"
                android:textSize="14sp"
                android:textColor="@color/textColors"/>
        </LinearLayout>

        <!-- COMMENT -->
        <LinearLayout
            android:id="@+id/layoutCommentCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_comment"
                app:tint="@color/textColors"/>

            <TextView
                android:id="@+id/text_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="0"
                android:textSize="14sp"
                android:textColor="@color/textColors"/>
        </LinearLayout>

        <!-- SAVE -->
        <LinearLayout
            android:id="@+id/layoutSaveCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:paddingHorizontal="10dp"
            android:paddingVertical="6dp"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/ivSaveCard"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_saved"
                app:tint="@color/textColors"/>

            <TextView
                android:id="@+id/text_save_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="0"
                android:textSize="14sp"
                android:textColor="@color/textColors"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
