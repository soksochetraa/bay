<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.CommunityAccountFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-30dp"
                android:layout_marginStart="-65dp"
                android:background="@drawable/bg_chip_badge"
                android:backgroundTint="#FEF9C3"
                android:elevation="7dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="9dp"
                android:paddingVertical="3dp"
                app:layout_constraintStart_toEndOf="@+id/profileImage"
                app:layout_constraintTop_toBottomOf="@+id/profileImage">

                <ImageView
                    android:id="@+id/ivRole"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_star_filled"
                    app:tint="#854D0E" />

                <TextView
                    android:id="@+id/tvRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/kantumruypro_semibold"
                    android:paddingTop="3dp"
                    android:text="កសិករ"
                    android:textColor="#854D0E"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginTop="-130dp"
                android:background="@drawable/bg_home_screen_header"
                android:elevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btnSetting"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_setting_button"
                android:contentDescription="Settings"
                android:src="@drawable/ico_settings"
                app:layout_constraintBottom_toBottomOf="@+id/btnEditProfile"
                app:layout_constraintEnd_toStartOf="@id/btnEditProfile"
                app:layout_constraintTop_toTopOf="@id/btnEditProfile"
                app:tint="@color/textColor" />

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginTop="36dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_setting_button"
                android:contentDescription="Settings"
                android:src="@drawable/ico_prev"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/textColor" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditProfile"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/kantumruypro_medium"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="កែប្រែ"
                android:textColor="@color/textColor"
                android:textSize="14sp"
                app:backgroundTint="#FBF6F3"
                app:cornerRadius="14dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:rippleColor="?attr/colorOnPrimary" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profileImage"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:layout_marginStart="17dp"
                android:layout_marginTop="95dp"
                android:clickable="true"
                android:focusable="false"
                android:scaleType="centerCrop"
                android:src="@drawable/img"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/CircleImage2"
                app:strokeColor="@android:color/white"
                app:strokeWidth="2dp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:fontFamily="@font/kantumruypro_medium"
                android:layout_marginTop="26dp"
                android:text="Ilya Miskov"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileImage" />

            <ImageView
                android:id="@+id/verified"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/ico_user_verified"
                app:layout_constraintBottom_toBottomOf="@+id/tvName"
                app:layout_constraintStart_toEndOf="@+id/tvName"
                app:layout_constraintTop_toTopOf="@+id/tvName" />

            <TextView
                android:id="@+id/tvAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="10dp"
                android:text="អំពីគាត់"
                android:fontFamily="@font/kantumruypro_semibold"
                android:textColor="@color/primary"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvName" />

            <TextView
                android:id="@+id/tvBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="17dp"
                android:lineHeight="22sp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/kantumruypro_regular"
                android:text="Human interface designer\n at Whop"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAbout" />


            <LinearLayout
                android:id="@+id/llLocationInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvBio">

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tallinn, Estonia"
                    android:drawablePadding="5dp"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    app:drawableLeftCompat="@drawable/ico_map_pin" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/llLocationInfo">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="17dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llLocationInfo">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/ViewSellProfile"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="@font/kantumruypro_regular"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        android:text="មើលទំនិញរបស់គាត់"
                        android:textColor="@color/primary"
                        android:textSize="14sp"
                        app:backgroundTint="@color/white"
                        app:cornerRadius="8dp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toStartOf="@+id/message"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:rippleColor="?attr/colorOnPrimary"
                        app:strokeColor="@color/primary"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/message"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/kantumruypro_regular"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="10dp"
                        android:text="ផ្ញើសារ"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        app:backgroundTint="@color/primary"
                        app:cornerRadius="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ViewSellProfile"
                        app:layout_constraintTop_toTopOf="parent"
                        app:rippleColor="?attr/colorOnPrimary" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/divider1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#E0E0E0"
                    app:layout_constraintTop_toBottomOf="@+id/llLocationInfo"
                    tools:layout_editor_absoluteX="17dp" />

                <TextView
                    android:id="@+id/tvActivityHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="10dp"
                    android:text="ការផ្សព្វផ្សាយរបស់អ្នក"
                    android:visibility="visible"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider1" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scrollbars="none"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/recyclerView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="430dp"
        android:padding="32dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollViewCategories">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/empty_box" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/kantumruypro_medium"
            android:text="មិនមានការបង្ហោះទេ!!"
            android:textColor="@color/gray"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/kantumruypro_regular"
            android:text="តោះចែករំលែកបទពិសោធន៍របស់ ឥឡូវនេះ!!"
            android:textColor="@color/gray"
            android:textSize="14sp" />

    </LinearLayout>

</FrameLayout>